{
  "expo": {
    "name": "Blindish",
    "slug": "blindish",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "blindish",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF6B6B"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "love.blindish.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Blindish needs access to your camera to take profile photos.",
        "NSPhotoLibraryUsageDescription": "Blindish needs access to your photo library to upload profile photos.",
        "NSMicrophoneUsageDescription": "Blindish needs access to your microphone to record voice messages.",
        "NSLocationWhenInUseUsageDescription": "Blindish uses your location to find matches nearby.",
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": ["blindish"]
          },
          {
            "CFBundleURLSchemes": ["com.googleusercontent.apps.708261707164-nqkm7f18t093oknfcce97ra5lj0uk65v"]
          }
        ]
      }
    },
    "android": {
      "package": "love.blindish.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FF6B6B"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "Blindish needs access to your photos to upload profile pictures."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Blindish needs access to your microphone to record voice messages."
        }
      ],
      "expo-notifications",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Blindish uses your location to find matches nearby."
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
