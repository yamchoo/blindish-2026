import { View, Text, StyleSheet, ScrollView, TouchableOpacity, Alert } from 'react-native';
import { useState, useEffect } from 'react';
import { router } from 'expo-router';
import { Colors } from '@/lib/constants/colors';
import { Typography, Spacing } from '@/lib/constants/typography';
import { Button } from '@/components/ui/Button';
import { useAuthStore } from '@/stores/authStore';
import { spotifyAuthService } from '@/features/auth/services/spotifyAuthService';
import { youtubeAuthService } from '@/features/auth/services/youtubeAuthService';
import { IntegrationSuccessModal } from '@/components/onboarding/IntegrationSuccessModal';

export default function IntegrationsScreen() {
  const { user } = useAuthStore();
  const [spotifyConnected, setSpotifyConnected] = useState(false);
  const [youtubeConnected, setYoutubeConnected] = useState(false);
  const [connectingSpotify, setConnectingSpotify] = useState(false);
  const [connectingYoutube, setConnectingYoutube] = useState(false);
  const [showSuccessModal, setShowSuccessModal] = useState(false);
  const [connectedPlatform, setConnectedPlatform] = useState<'spotify' | 'youtube' | null>(null);

  const handleConnectSpotify = async () => {
    if (!user) return;

    setConnectingSpotify(true);
    const result = await spotifyAuthService.connect(user.id);
    setConnectingSpotify(false);

    if (result.success) {
      setSpotifyConnected(true);
      setConnectedPlatform('spotify');
      setShowSuccessModal(true);
    } else {
      Alert.alert(
        'Connection Failed',
        result.error || 'Failed to connect Spotify. Please try again.'
      );
    }
  };

  const handleConnectYoutube = async () => {
    if (!user) return;

    setConnectingYoutube(true);
    const result = await youtubeAuthService.connect(user.id);
    setConnectingYoutube(false);

    if (result.success) {
      setYoutubeConnected(true);
      setConnectedPlatform('youtube');
      setShowSuccessModal(true);
    } else {
      Alert.alert(
        'Connection Failed',
        result.error || 'Failed to connect YouTube. Please try again.'
      );
    }
  };

  const handleModalContinue = () => {
    setShowSuccessModal(false);
    setConnectedPlatform(null);
  };

  const handleContinue = () => {
    router.push('/(onboarding)/analysis');
  };

  const handleSkip = () => {
    router.push('/(onboarding)/analysis');
  };

  return (
    <ScrollView style={styles.container} contentContainerStyle={styles.content}>
      <View style={styles.header}>
        <Text style={styles.title}>Connect Your Accounts</Text>
        <Text style={styles.subtitle}>
          Help us understand you better by connecting Spotify or YouTube.
          {'\n'}We'll analyze your music taste and interests to find better matches.
        </Text>
      </View>

      <View style={styles.cardsContainer}>
        {/* Spotify Card */}
        <TouchableOpacity
          style={[styles.card, spotifyConnected && styles.cardConnected]}
          onPress={spotifyConnected ? undefined : handleConnectSpotify}
          disabled={connectingSpotify || spotifyConnected}
        >
          <View style={styles.cardHeader}>
            <View style={styles.iconContainer}>
              <Text style={styles.icon}>ðŸŽµ</Text>
            </View>
            <View style={styles.cardTitleContainer}>
              <Text style={styles.cardTitle}>Spotify</Text>
              {spotifyConnected && (
                <Text style={styles.connectedBadge}>âœ“ Connected</Text>
              )}
            </View>
          </View>

          <Text style={styles.cardDescription}>
            We'll analyze your top artists, favorite tracks, and music genres to understand
            your personality better.
          </Text>

          {!spotifyConnected && (
            <View style={styles.cardButton}>
              <Button
                onPress={handleConnectSpotify}
                loading={connectingSpotify}
                variant="secondary"
              >
                Connect Spotify
              </Button>
            </View>
          )}
        </TouchableOpacity>

        {/* YouTube Card */}
        <TouchableOpacity
          style={[styles.card, youtubeConnected && styles.cardConnected]}
          onPress={youtubeConnected ? undefined : handleConnectYoutube}
          disabled={connectingYoutube || youtubeConnected}
        >
          <View style={styles.cardHeader}>
            <View style={styles.iconContainer}>
              <Text style={styles.icon}>ðŸ“º</Text>
            </View>
            <View style={styles.cardTitleContainer}>
              <Text style={styles.cardTitle}>YouTube</Text>
              {youtubeConnected && (
                <Text style={styles.connectedBadge}>âœ“ Connected</Text>
              )}
            </View>
          </View>

          <Text style={styles.cardDescription}>
            We'll analyze your subscriptions and liked videos to learn about your interests
            and values.
          </Text>

          {!youtubeConnected && (
            <View style={styles.cardButton}>
              <Button
                onPress={handleConnectYoutube}
                loading={connectingYoutube}
                variant="secondary"
              >
                Connect YouTube
              </Button>
            </View>
          )}
        </TouchableOpacity>
      </View>

      <View style={styles.footer}>
        <Button onPress={handleContinue}>Continue</Button>

        <TouchableOpacity onPress={handleSkip} style={styles.skipButton}>
          <Text style={styles.skipText}>Skip for Now</Text>
        </TouchableOpacity>

        <Text style={styles.note}>
          You can connect these later in your profile settings
        </Text>
      </View>

      {/* Success Modal */}
      <IntegrationSuccessModal
        visible={showSuccessModal}
        platform={connectedPlatform}
        onContinue={handleModalContinue}
      />
    </ScrollView>
  );
}

